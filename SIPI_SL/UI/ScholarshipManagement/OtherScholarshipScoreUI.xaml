                <TextBox HorizontalAlignment="Left" Height="23" Margin="101,81,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="243"  x:Name="DepartmentTextBox_Copy"/>
                <Label Content="Current semester" HorizontalAlignment="Left" Margin="377,51,0,0" VerticalAlignment="Top" Width="120" Height="24"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="502,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" x:Name="studentIdTextBox_Copy"/>
                <Label Content="Date" HorizontalAlignment="Left" Margin="377,75,0,0" VerticalAlignment="Top" Width="120" Height="24"/>
                <DatePicker HorizontalAlignment="Left" Margin="502,76,0,0" VerticalAlignment="Top" Width="222"/>

            </Grid>
        </GroupBox>
        <GroupBox Header="Details Articles" HorizontalAlignment="Left" Margin="20,167,0,0" VerticalAlignment="Top" Height="206" Width="856">
            <Grid>
                <Label FontWeight="Bold" Content="To," HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
                <Label FontWeight="Bold" Content="The" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top"/>

                <TextBox HorizontalAlignment="Left" Height="29" Margin="62,20,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="218"/>

                <Label FontWeight="Bold" Content="Subject:" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" Height="29" Margin="62,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="612"/>
                <Label FontWeight="Bold" Content="Sir," HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Height="90" Margin="10,93,0,0" Text="" VerticalAlignment="Top" Width="824"/>

            </Grid>
        </GroupBox>
        <Button Content="Assign"  HorizontalAlignment="Left" Margin="777,485,0,0" VerticalAlignment="Top" Width="99" Height="29"/>
        <GroupBox Header="Office" HorizontalAlignment="Left" Margin="20,374,0,0" VerticalAlignment="Top" Width="856" Height="106">
            <Grid>
                <Label Content="Description " HorizontalAlignment="Left" Margin="9,21,0,0" VerticalAlignment="Top" Width="86"/>
                <TextBox HorizontalAlignment="Left" Height="64" Margin="80,10,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="288" />
                <Label Content="Score " HorizontalAlignment="Left" Margin="368,13,0,0" VerticalAlignment="Top" Width="86"/>
                <TextBox HorizontalAlignment="Left" Height="29" Margin="454,13,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="180" />
                <Label Content="Price Amount " HorizontalAlignment="Left" Margin="368,42,0,0" VerticalAlignment="Top" Width="86"/>
                <TextBox HorizontalAlignment="Left" Height="29" Margin="454,42,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="180" />
                <Label Content="Duration " HorizontalAlignment="Left" Margin="639,13,0,0" VerticalAlignment="Top" Width="57"/>
                <TextBox HorizontalAlignment="Left" Height="29" Margin="696,13,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="130" />
                <Label Content="Date " HorizontalAlignment="Left" Margin="639,42,0,0" VerticalAlignment="Top" Width="57"/>
                <DatePicker HorizontalAlignment="Left" Margin="696,43,0,0" VerticalAlignment="Top" Width="130"/>

            </Grid>

        </GroupBox>


    </Grid>
</Window>
