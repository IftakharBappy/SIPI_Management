                <Label Content="Department" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top" Width="86"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="101,56,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="243"  Name="DepartmentTextBox"/>

                <Label Content="ID" HorizontalAlignment="Left" Margin="377,27,0,0" VerticalAlignment="Top" Width="120" Height="24"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="502,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" Name="studentIdTextBox"/>
                <Button Content="Get Student" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="83" Height="24" Name="getStudentPopupButton"/>
